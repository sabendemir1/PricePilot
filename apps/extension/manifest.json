{
  "manifest_version": 3,
  "name": "PriceCompare â€” Dev Hover Highlight",
  "version": "0.1.0",
  "description": "Highlights product cards on hover for development.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle",
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}